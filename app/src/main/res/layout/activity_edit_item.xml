<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_edit_item"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.codepath.simpletodo.EditItemActivity">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:ems="10"
        android:layout_marginTop="84dp"
        android:id="@+id/etEditItem"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/btnEditItem"
        android:layout_alignStart="@+id/btnEditItem" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:ems="10"
        android:layout_marginTop="84dp"
        android:id="@+id/etSetPriority"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/btnEditItem"
        android:layout_alignStart="@+id/btnEditItem" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:ems="10"
        android:layout_marginTop="84dp"
        android:id="@+id/etSetDueDate"
        android:windowSoftInputMode="stateAlwaysVisible"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/btnEditItem"
        android:layout_alignStart="@+id/btnEditItem" />

    <TextView
        android:text="@string/edit_item_below"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvEditItem"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/etEditItem"
        android:layout_alignStart="@+id/etEditItem"
        android:layout_marginTop="30dp"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        android:allowUndo="true" />

    <Button
        android:text="@string/save_item"
        android:onClick="onEditItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="29dp"
        android:id="@+id/btnEditItem"
        android:layout_marginLeft="26dp"
        android:layout_marginStart="26dp"
        android:layout_below="@+id/etEditItem"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
</RelativeLayout>
